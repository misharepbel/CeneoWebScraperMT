<body>
    <header id="menu-bar">
        <h1><a href="{{url_for('index')}}">Ceneo.pl Web Scraper</a></h1>
        <nav>
            {% block menu_links %}
                <a href="{{url_for('author')}}">Autor</a>
                <a href="{{url_for('extract')}}">Ekstrakcja</a>
                <a href="{{url_for('products')}}">Produkty</a>
            {% endblock menu_links %}
        </nav>
    </header>
    <h2 class="mt-3 mb-3 text-center">
        {% block title %}
            Strona bazowa
        {% endblock title %}
    </h2>
    <section>
        {% block content %}
            <p>To jest plik bazowy.</p>
        {% endblock content %}
    </section>
    <footer>
        <p>Michael Tryfanau, Uniwersytet Ekonomiczny w Krakowie</p>
    </footer>
</body>
</html>